services:
  redisinsight:
    image: redis/redisinsight
    restart: always
    ports:
      - ${REDIS_INSIGHT}:5540
    networks:
      - news_aggregator_net

  adminer:
    image: adminer:4.8.1
    environment:
      ADMINER_DESIGN: nette
      ADMINER_DEFAULT_SERVER: mysql
      ADMINER_PLUGINS: "tables-filter tinymce"
    depends_on:
      - mysql
    ports:
      - ${ADMINER_PORT}:8080
    networks:
      - news_aggregator_net

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    environment:
      PMA_HOST: mysql
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: secret
    depends_on:
      - mysql
    ports:
      - ${PHP_MYADMIN_PORT}:80
    networks:
      - news_aggregator_net
