
services:
  mysql:
    image: mysql:latest
    restart: always
    env_file:
      - .env
    volumes:
      - ./mysql/data:/var/lib/mysql
    ports:
      - ${MYSQL_PORT}:3306

  redis:
    image: redis
    ports:
      - ${REDIS_PORT}:6379

  scheduler:
    build:
      context: ../
      dockerfile: docker/app/Dockerfile
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ../codes:/var/www/html
    entrypoint:
      [
        "sh",
        "-c",
        "while [ true ]; do php /var/www/html/artisan schedule:run --verbose --no-interaction & sleep 60; done",
      ]

  queue:
    build:
      context: ../
      dockerfile: docker/app/Dockerfile
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ../codes:/var/www/html
    command: php /var/www/artisan queue:work --verbose --tries=3 --timeout=90

  adminer:
    image: adminer:4.8.1
    environment:
      ADMINER_DESIGN: nette
      ADMINER_DEFAULT_SERVER: mysql-db
      ADMINER_PLUGINS: "tables-filter tinymce"
    depends_on:
      - mysql-db
    ports:
      - ${ADMINER_PORT}:8080

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    ports:
      - ${PHP_MYADMIN_PORT}:80
    environment:
      PMA_HOST: mysql-db
      PMA_PORT: 3306
      PMA_USER: ${MYSQL_USER}
      PMA_PASSWORD: ${MYSQL_PASSWORD}
    depends_on:
      - mysql-db

  redis-commander:
    image: rediscommander/redis-commander:latest
    restart: always
    environment:
      - REDIS_HOSTS=local:redis:6379
    ports:
      - ${REDIS_COMMANDER}:8081

  redisinsight:
    image: redis/redisinsight
    restart: always
    ports:
      - ${REDIS_INSIGHT}:5540
